public static class Program
{
    public static void Main()
    {
        int numberOfCitizens = 10;
        string[] names = new string[numberOfCitizens];
        int[] ages = new int[numberOfCitizens];


        for (int i = 0; i < numberOfCitizens; i++)
        {
            Console.Write($"Enter name of citizen {i + 1}: ");
            names[i] = Console.ReadLine();

            do
            {
                Console.Write($"Enter age for {names[i]}: ");
                if (int.TryParse(Console.ReadLine(), out ages[i]))
                {
                    if (ages[i] >= 0 && ages[i] <= 120)
                    {
                        break;
                    }
                }
                Console.WriteLine("Invalid age!  Enter age between 0-120.");
            } while (true);
        }

        Console.WriteLine("\nVoting and Categorization Results:");


        for (int i = 0; i < numberOfCitizens; i++)
        {
            string status = "Cannot Vote";
            string category = "";

            if (ages[i] >= 18)
            {
                status = "Can Vote";
                if (ages[i] <= 30)
                {
                    category = "Young Voter (18-30)";
                }
                else if (ages[i] <= 59)
                {
                    category = "Mid-age Voter (31-59)";
                }
                else
                {
                    category = "Senior Voter (60+)";
                }
            }

            Console.WriteLine($"{names[i]}, Age: {ages[i]}, Status: {status}, Category: {category}");
        }
    }
}






